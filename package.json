{
  "name": "vue-icon-gallery",
  "version": "1.0.1",
  "type": "module",
  "description": "Vite plugin for interactive SVG icon gallery in Vue projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./iconScanner": {
      "types": "./dist/iconScanner.d.ts",
      "import": "./dist/iconScanner.js"
    },
    "./simpleGalleryServer": {
      "types": "./dist/simpleGalleryServer.d.ts",
      "import": "./dist/simpleGalleryServer.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run build:gallery",
    "build:gallery": "vite build --config vite.gallery.config.ts",
    "dev": "tsc --watch",
    "dev:gallery": "vite --config vite.gallery.config.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests yet\""
  },
  "keywords": [
    "vite",
    "vue",
    "icons",
    "svg",
    "gallery",
    "preview",
    "previewer",
    "template",
    "components"
  ],
  "author": "maksimoveg2016@yandex.ru",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaksimovEgor/vue-icon-gallery.git"
  },
  "bugs": {
    "url": "https://github.com/MaksimovEgor/vue-icon-gallery/issues"
  },
  "homepage": "https://github.com/MaksimovEgor/vue-icon-gallery#readme",
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "@vue/server-renderer": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.8"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
